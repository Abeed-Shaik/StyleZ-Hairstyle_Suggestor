<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HBOblongActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hair"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:src="@drawable/hairstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/curved"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.03"
        android:text="Hair Styles"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/hair"
        app:layout_constraintStart_toStartOf="@+id/hair"
        app:layout_constraintTop_toBottomOf="@+id/hair" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/beard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="90dp"
        android:padding="5dp"
        android:src="@drawable/beard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hair"
        app:shapeAppearanceOverlay="@style/curved"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.03"
        android:text="Beard Styles"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/beard"
        app:layout_constraintStart_toStartOf="@+id/beard"
        app:layout_constraintTop_toBottomOf="@+id/beard" />


</androidx.constraintlayout.widget.ConstraintLayout>